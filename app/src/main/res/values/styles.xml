<resources>


    <style name="AppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#FC6E20</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">#FC6E20</item>
        <item name="colorControlNormal">#FC6E20</item>
        <item name="colorControlActivated">#FC6E20</item>
        <item name="colorControlHighlight">#FC6E20</item>
    </style>

    <style name="MyAppThemeDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">#03254c</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">#03254c</item>
        <item name="colorControlNormal">@android:color/holo_blue_bright</item>
        <item name="colorControlActivated">#03254c</item>
        <item name="colorControlHighlight">#03254c</item>

    </style>

</resources>
